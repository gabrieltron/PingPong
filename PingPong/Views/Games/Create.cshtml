@model PingPong.Models.GameTeamSelectionVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                Teams size:
                <input type="radio" name="TeamsSize" value=1 /> 1 Player
                <input type="radio" name="TeamsSize" checked="checked" value=2 /> 2 Players
            </div>
            <div class="form-group">
                Team one:
                <select asp-for="SelectedTeamOneId" asp-items="Model.DoubleTeams" class="team-selector">
                    <option value="">Select Team</option>
                </select>
                <span asp-validation-for="SelectedTeamOneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamOneScore" class="control-label"></label>
                <input asp-for="TeamOneScore" class="form-control" />
                <span asp-validation-for="TeamOneScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                Team Two:
                <select asp-for="SelectedTeamTwoId" asp-items="Model.DoubleTeams" class="team-selector">
                    <option value="">Select Team</option>
                </select>
                <span asp-validation-for="SelectedTeamTwoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamTwoScore" class="control-label"></label>
                <input asp-for="TeamTwoScore" class="form-control" />
                <span asp-validation-for="TeamTwoScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        var doubleTeams = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.DoubleTeams.Items));
        var singleTeams = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.SingleTeams.Items));
    </script>
    <script src="~/js/games/team-selector.js"></script>
}
